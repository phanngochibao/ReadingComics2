<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E4E4"
    android:orientation="vertical"
    tools:context="com.example.readingcomics.Fragment_AddComic"
    android:id="@+id/fragment_add_comic">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="NEW COMIC"
            android:layout_marginTop="40dp"
            android:textColor="#000000"
            android:textSize="40sp"
            android:gravity="center"
            android:textStyle="bold|bold|bold"
    />
    <EditText
        android:background="#99FFFFFF"
        android:textColor="#0048FF"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Type title"
        android:textSize="19sp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:id="@+id/new_name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:hint="add URL of cover image"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:shadowColor="#000000"
        android:textColor="#0048FF"
        android:textColorHint="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        android:id="@+id/new_imgsrc"
        />

    <EditText
        android:background="#99FFFFFF"
        android:textColor="#0048FF"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="                        \nType content\n                       "
        android:textSize="19sp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:id="@+id/new_content"
        android:inputType="textMultiLine"
        />

    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="#2196F3"
            android:id="@+id/btn_add"
    />

</LinearLayout>